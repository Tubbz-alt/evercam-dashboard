<div class="row">
  <div class="div-compare-placeholder">
    <input type="hidden" id="txtbefore">
    <input type="hidden" id="txtafter">
    <div class="js-img-compare">
      <div style="display: none;">
        <span id="calendar-before" class="images-compare-label before-calendar" data-query="before-calendar"><i class="fa fa-calendar compare-calendar"></i> Before</span>
        <img id="compare_before" src="" alt="Before"/>
      </div>
      <div>
        <span id="calendar-after" class="images-compare-label after-calendar" data-query="after-calendar"><i class="fa fa-calendar compare-calendar"></i> After</span>
        <img id="compare_after" src="" alt="After"/>
      </div>
      <div class="div-embed-code">
        <span class="images-compare-embed-code" title="Embed Code" href="#" data-toggle="modal" data-target="#export-compare-modal"><i class="fa fa-code"></i></span>
      </div>
      <div class="evercam-brand">
        <%= image_tag("evercam-logo-white.png", :class => "svg-logo", alt: "Evercam.io") %>
      </div>
    </div>
  </div>
</div>

<div id="export-compare-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div id="form-create-clip" class="modal-body">
        <div class="row">
          <div class='col-lg-12 col-md-12 col-sm-12'>
            <div class='portlet'>
              <div class="portlet-title">
                <div class="caption"> Export Compare</div>
              </div>
              <div class="portlet-body">
                <div class="add-clip">
                  <table class="table table-fixed table-borderless">
                    <tr>
                      <td style="width: 100px;"><label class="control-label camera-name" for="export_name">Name*</label></td>
                      <td>
                        <input type="text" required placeholder="e.g. My Export Compare" class="form-control clip-text-box" id="export_name" name="export_name">
                      </td>
                    </tr>
                    <tr id="row-animation" class="hide">
                      <td colspan="2">
                        <div id="loading-image-div" class="loading-image-div">
                          <img class="export-compare-animation" src="/assets/evercam-loading-gif.gif">
                        </div>
                      </td>
                    </tr>
                    <tr id="row-textarea" class="hide">
                      <td class="col-md-4"><label class="control-label" for="camera-vendor">Embed Code*</label></td>
                      <td>
                        <textarea id="txtEmbedCode" class="form-control embed-code" style="" readonly="true"></textarea>
                      </td>
                    </tr>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
        <fieldset>
          <div class="export-buttons">
            <div class='pull-left form-group1'>
              <input type="button" class="alert push btn btn-primary margin-right-10" id="export_compare_button" value="Export"/>
            </div>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <span id="spn-success-export" class="alert alert-info hide">Export completed and embed code copied..</span>
          </div>
        </fieldset>
      </div>
    </div>
  </div>
</div>
